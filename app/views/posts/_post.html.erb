<article>
	<header>
		<h1><%= link_to post.title, post_path(post) %></h1>
		<time datetime="<%= post.published_at %>">Posted on <%= format_post_date(post.published_at) %></time>
	</header>
	<div>
		<%=raw post.body_html %>
	</div>
	<footer>
		<p>
			<%= link_to "", "#{post_path(post)}#disqus_thread" %> - 
			<% unless post.tags.empty? -%>
    		Tagged: <%= linked_tag_list(post.tags) %>
    	<% end -%>
		</p>
		<p>
			<!-- -->
			<div class="twitter-follow">
				<a href="https://twitter.com/MattAntWest" class="twitter-follow-button" data-show-count="false">Follow @MattAntWest</a>
			</div>
			<!-- Twitter -->
			<div class="tweet-btn">
				<a href="https://twitter.com/share" class="twitter-share-button" data-lang="en" data-url="http://codingskyscrapers.com<%= post_path(post) %>" data-via="MattAntWest" data-text="<%= post.title %>">
					Tweet
				</a>
			</div>
			<!-- Google+ -->
			<div class="g-plusone" data-size="medium" data-href="http://codingskyscrapers.com<%= post_path(post) %>"></div>
			<!-- Facebook -->
			<div class="fb-like" data-href="http://codingskyscrapers.com<%= post_path(post) %>" data-send="false" data-layout="button_count" data-width="450" data-show-faces="true" data-font="arial"></div>
			<!-- Hacker News -->
			<a href="http://news.ycombinator.com/submit" class="hn-share-button" data-title="<%= post.title %>" data-url="http://codingskyscrapers.com<%= post_path(post) %>">Vote on HN</a>
		</p>
	</footer>
	<% if params[:action] != "index" %>
	<div id="comments">
	  <div id="disqus_thread"></div>
	  <script type="text/javascript">
	      /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
	      var disqus_shortname = 'codingskyscrapers'; // required: replace example with your forum shortname

	      /* * * DON'T EDIT BELOW THIS LINE * * */
	      (function() {
	          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
	          dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
	          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
	      })();
	  </script>
	  <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
	</div>
	<% end %>
</article>