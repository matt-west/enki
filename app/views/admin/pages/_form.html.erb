<%= form.inputs do -%>
  <%= form.input :title %>
  <%= form.input :sub_title %>
  <%= form.input :slug, :hint => "Leave blank for an auto-generated slug based on the title." %>
  <%= form.input :body, :hint => "<a href='http://daringfireball.net/projects/markdown/syntax'>Markdown enabled</a>. Use Ctrl+E to switch between preview and edit mode.".html_safe %>
<% end -%>
