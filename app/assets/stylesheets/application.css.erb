/*****************
  Reset
*****************/
html,body,div,span,applet,object,iframe,a,abbr,acronym,address,big,cite,code,del,dfn,em,font,img,ins,kbd,q,s,samp,small,strike,strong,sub,sup,tt,var,dl,dt,dd,ol,ul,li,h1,h2,h3,h4,h5,h6,pre,form,fieldset,input,textarea,label,legend,p,blockquote,table,caption,tbody,tfoot,thead,tr,th,td{margin:0;padding:0;border:0;outline:0;font-weight:inherit;font-style:inherit;font-size:100%;font-family:inherit;vertical-align:baseline;}body{line-height:1;color:black;background:white;}:focus{outline:0;}table{border-collapse:collapse;border-spacing:0;}caption,th,td{text-align:left;font-weight:normal;}fieldset,img{border:0;}address,caption,cite,code,dfn,em,strong,th,var{font-style:normal;font-weight:normal;}ol,ul{list-style:none;}h1,h2,h3,h4,h5,h6{font-size:100%;font-weight:normal;}blockquote:before,blockquote:after,q:before,q:after{content:"";}blockquote,q{quotes:"" "";}abbr,acronym{border:0;}

/*****************
  Fonts
*****************/
@font-face {
  font-family: 'League Gothic';
  src: url('../fonts/League_Gothic-webfont.eot?') format('eot'), url('../fonts/League_Gothic-webfont.woff') format('woff'), url('../fonts/League_Gothic-webfont.ttf') format('truetype');
}

/*****************
  Main Styling
*****************/
html,
body {
  width: 100%;
  overflow-x: hidden;
}

body {
  background: #F8F8F8 url(<%= asset_path 'bg.jpeg' %>);
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  -ms-background-size: cover;
  background-size: cover;
  font-family: Helvetica Neue, Helvetica, Arial, Sans-serif;
  color: #595959;
}

#container {
  position: absolute;
  width: 100%;
  height: 100%;
}

a,
a:visited {
  color: #08C;
  text-decoration: none;
}

a:hover,
a:focus {
  text-decoration: underline;
}

img {
  max-width: 100%;
}

img.alignRight {
  float: right;
  padding: 0 0 35px 35px;
  max-width: 30%;
}

strong {
  font-weight: bold;
}

/*****************
  Left Panel
*****************/

section#left {
  width: 25%;
  min-width: 300px;
  height: 100%;
  float: left;
}

section#left header {
  margin: 1.35em;
}

section#left header h1 {
  font-weight: 200;
  font-size: 2em;
  font-family: Helvetica Neue, Helvetica, Arial, Sans-serif;
  text-transform: uppercase;
}

section#left header h1 a,
section#left header h1 a:visited {
  color: #000;
}

section#left header h1 a:hover,
section#left header h1 a:focus {
  text-decoration: none;
  color: #595959;
}

section#left header h2 {
  font-weight: 200;
  margin-top: 0.5em;
  font-size: 0.9em;
}

section#left header h2 a {
  color: #595959;
}

#see-nav {
  float: right;
  color: #595959;
  font-weight: 200;
  margin-top: -1em;
  font-size: 0.9em;
  display: none;
}

section#left header nav {
  margin-top: 2em;
  font-size: 0.9em;
}

section#left header nav.show {
  display: block;
}

section#left header nav h3 {
  font-weight: 200;
  margin-bottom: 0.5em;
}

section#left header nav ul {
  margin-bottom: 1em;
}

section#left header nav ul li {
  padding-bottom: 0.4em;
  padding-left: 0.8em;
}

section#left header nav ul li a {
  color: #212121;
}

body > footer {
  text-align: center;
  padding: 1em;
  color: rgba(0, 0, 0, 0.3);
  clear: both;
}

footer #explore {
  font-size: 1.2em;
  padding-bottom: 0.8em;
  font-family: 'Niconne',cursive;
  letter-spacing: 1px;
}

body > footer p {
  font-size: 0.7em;
}

/*****************
  Center Panel
*****************/

section#center {
  width: 55%;
  margin-left: 25%;
  min-height: 100%;
}

section#center article {
  word-wrap: break-word;
}

article,
div#comments {
  padding: 3.5em;
  color: #595959;
  background: white;
  box-shadow: 0 0 15px rgba(0,0,0,0.3);
  -webkit-box-shadow: 0 0 15px rgba(0,0,0,0.3);
  -moz-box-shadow: 0 0 15px rgba(0,0,0,0.3);
  -o-box-shadow: 0 0 15px rgba(0,0,0,0.3);
  -ms-box-shadow: 0 0 15px rgba(0,0,0,0.3);
  margin: 1.5em 0;
  font-size: 0.9em;
  line-height: 1.5em;
}

article header a,
article header a:visited {
  color: #000;
}

article header a:hover,
article header a:focus {
  text-decoration: none;
  border-bottom: dotted 1px #000;
}

article header h1 {
  font-weight: 200;
  font-family: Helvetica Neue, Helvetica, Arial, Sans-serif;
  font-size: 2em;
  line-height: 1.2em;
  margin-bottom: 0.5em;
  color: #000;
}

article h2,
article section h1 {
  font-weight: 200;
  font-family: Helvetica Neue, Helvetica, Arial, Sans-serif;
  font-size: 1.4em;
  line-height: 1em;
  margin-top: 1.2em;
  margin-bottom: 0.5em;
  color: #000;
}

article h3,
article section h2 {
  color: #000;
  margin: 0;
}

article p {
  margin: 1em 0;
  text-align: justify;
}

article footer {
  font-size: 0.8em;
  color: #636363;
}

article footer a,
article footer a:visited {
  color: #636363;
  border-bottom: dotted 1px #636363;
}

article footer a:hover,
article footer a:focus {
  text-decoration: none;
  color: #000;
  border-bottom: dotted 1px #000;
}

article figure {
  font-size: 0.7em;
  padding: 0;
  margin: 0;
}

article figure figcaption {
  padding-top: 1em;
}

article blockquote {
  margin-left: 30px;
  padding-left: 10px;
  border-left: 4px solid #CCC;
  line-height: 1.6em;
  font-size: 1.1em;
}

.fg-right {
  float: right;
  padding: 1em 0 1em 2em;
}

blockquote {
  background:#f9f9f9;
  border-left:10px solid #ccc;
  margin:1.5em 10px;
  padding:.5em 10px;
  quotes:"\201C""\201D""\2018""\2019";
}

blockquote:before {
  color:#ccc;
  content:open-quote;
  font-size:4em;
  line-height:.1em;
  margin-right:.25em;
  vertical-align:-.4em;
}

blockquote p {
  display:inline;
}

/*****************
  Right Panel
*****************/

section#right {
  float: left;
  width: 20%;
  height: 100%;
  text-align: center;
}

section#right aside {
  padding: 1em;
}

section#right h4 {
  font-weight: bold;
  font-size: 0.9em;
  color: #999;
  line-height: 1.3em;
}

section#right h4 a {
  color: #636363;
}

/*****************
  Social
*****************/

.tweet-btn {
  float: left;
}

.g-plus-one {
  float: left;
}

.fb-like {
  top: -3px;
}

.fb-like span,
.fb-like iframe {
  height: 20px !important;
}

/**************************
  Media Queries
**************************/
@media only screen and (max-width: 1220px), only screen and (max-device-width: 1220px) {
  section#left {
    width: 300px;
  }

  section#left header h1 {
    font-size: 2em;
  }

  section#center {
    margin-left: 300px;
    width: auto;
  }

  section#center article {
    margin: 1.5em 1.5em 1.5em 0;
  }

  section#right {
    display: none;
  }

  div#comments {
    padding: 2em;
    margin-right: 1.5em;
  }
}

@media only screen and (max-width: 767px), only screen and (max-device-width: 767px) {
  #see-nav {
    display: block;
  }

  article,
  div#comments {
    padding: 2em;
  }

  .fg-right {
    float: none;
    padding-left: 0;
  }

  body {
    padding-bottom: 0.8em;
  }

  section#left {
    float: none;
    width: 100%;
    height: auto;
    position: relative;
  }

  section#left .recent {
    display: none;
  }

  section#left header {
    margin: 0.8em;
  }

  section#left header nav h3 {
    float: left;
  }

  section#left header nav {
    margin-top: 1.5em;
    text-align: left;
    display: none;
  }

  section#left header nav ul li {
    float: left;
  }

  section#left footer {
    display: none;
  }

  section#center {
    float: none;
    margin: 0;
  }

  section#center article,
  div#comments {
    padding: 1.5em;
    margin: 0.8em;
  }
}



/* Contain floats: h5bp.com/q */
.clearfix:before, .clearfix:after { content: ""; display: table; }
.clearfix:after { clear: both; }
.clearfix { *zoom: 1; }






